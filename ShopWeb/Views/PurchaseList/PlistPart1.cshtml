@using ShopWeb.Models
@model MemberPurchaseListViewModel



@if (Model == null || Model.purchase_lists.Count == 0)
{
    <div class="cart-item dashboard-group" style="background-color:white">
        <div class="cart-text">
            <h1 style="height:300px;text-align:center;padding-top:150px;">没有订单记录~</h1>
        </div>
    </div>
}
@if (Model != null && Model.purchase_lists.Count > 0)
{
    <div style="width: 100%;border-bottom: 1px solid #efefef;">
        <h3 class="text-center" style="margin: 10px 0 10px 0;padding-top:10px;color:#f55d2c">共有记录:&nbsp;@Model.purchase_lists.Count &nbsp;条</h3>
    </div>
    foreach (var i in Model.purchase_lists)
    {
        <div class="cart-item">
            <div class="cart-product-img">

                @if (i.goods_img_path == null)
                {
                    <img src="" alt="未上架或已下架">
                }
                else
                {<a href="@Url.Content("~/BuyGoods/?goods_id=" + i.goods_id)" class="product-img">
                        <div class="zoomImage11" style="background-image:url(@i.goods_img_path)"></div>
                    </a>
                }

            </div>
            <div class="cart-text">
                <a title="@i.goods_name" href="@Url.Content("~/BuyGoods/?goods_id=" + i.goods_id)" style="color:black;">
                    <h2 style="margin-bottom:20px;text-overflow:ellipsis;overflow:hidden;white-space:nowrap;">@i.goods_name</h2>
                </a>
                <h3 style="margin-bottom:20px;">订单号:&nbsp;@i.plist_id</h3>
                <div class="col-md-12" style="margin:10px 0;padding:0">
                    <div class="col-md-4" style="padding: 0">
                        <div class="col-md-4" style="padding:0">单价</div>
                        <div class="cart-item-price col-md-8" style="padding: 0">￥@i.unit_price</div>
                    </div>
                    <div class="col-md-4" style="padding: 0">
                        <div class="col-md-4" style="padding:0">数量</div>
                        <div class="cart-item-price col-md-8" style="padding: 0">@i.goods_num</div>
                    </div>
                    <div class="col-md-4" style="padding: 0">
                        <div class="col-md-4" style="padding:0">总价</div>
                        <div class="cart-item-price col-md-8" style="font-size:28px;padding:0">￥@i.total_price</div>
                    </div>
                </div>

                <div class="col-md-8" style="margin:10px 0;padding:0">
                    <div class="col-md-4" style="color:burlywood;padding:0">购买日期</div>
                    <div class=" col-md-4" style="color:burlywood;padding:0">@i.date</div>
                </div>

            </div>
        </div>
    }
}

