            -webkit-transition: all 0.2s ease-in-out;
            -o-transition: all 0.2s ease-in-out;
            -ms-transition: all 0.2s ease-in-out;
            -webkit-transition: all 0.2s ease-in-out;
            background-image: -webkit-linear-gradient(left, rgba(0, 163, 206, 0.9), rgba(0, 201, 255, 0.9));
            background-image: linear-gradient(to right, rgba(0, 163, 206, 0.9), rgba(0, 201, 255, 0.9));
            pointer-events: none;
        }

        #sync1 .owl-nav .owl-next:hover {
