    <style>
        .payBackground {
            background: none;
            position: relative;
            padding: 0;
        }

            .payBackground:before {
                margin: 0;
                content: "";
                background: url(/content/image/banner.svg) no-repeat;
                background-attachment: fixed;
                left: 0;
                right: 0;
                top: 0;
                bottom: 0;
